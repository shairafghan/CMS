<p id="notice"><%= notice %></p>

<h1 align="center">Doctors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Doc name </th>
      <th>email </th>
      <th>office no </th>
      <th>fee </th>
      <th>Specialty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.doc_name %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.doc_office_no %></td>
        <td><%= doctor.doc_fee %></td>
        <td><%= doctor.specialty.sp_name %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
