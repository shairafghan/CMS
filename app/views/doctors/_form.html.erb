<h1 align="center">Signup as doctor</h1>

<%= form_for(doctor) do |f| %>
  <% if doctor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

      <ul>
      <% doctor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :doc_name %>
    <%= f.text_field :doc_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :doc_office_no %>
    <%= f.number_field :doc_office_no %>
  </div>

  <div class="field">
    <%= f.label :doc_fee %>
    <%= f.text_field :doc_fee %>
  </div>

  <div class="field">
    <%= f.label :specialty_id %>
    <%= f.text_field :specialty_id %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"Confirma Password" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
