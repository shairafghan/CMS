<%= form_for(patient) do |f| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :pat_name %>
    <%= f.text_field :pat_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :pat_gender %>
    <%= f.select :pat_gender,  Patient::GENDER_TYPES, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :pat_dob %>
    <%= f.date_select :pat_dob, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :pat_address %>
    <%= f.text_area :pat_address, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
